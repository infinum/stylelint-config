{
  "name": "@infinumjs/stylelint-config",
  "version": "1.0.2",
  "description": "Infinum's shareable config for stylelint",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "infinum"
  ],
  "author": "Infinum JavaScript Team <hello@infinum.co>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/infinum/stylelint-config.git"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "eslint": "^4.1.0",
    "eslint-config-stylelint": "^8.0.0",
    "npm-run-all": "^4.0.0",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-consistent": "^2.0.0",
    "remark-preset-lint-recommended": "^3.0.0"
  },
  "peerDependencies": {
    "stylelint": ">=13.0.0",
    "stylelint-config-recommended-scss": ">=6.0.0"
  },
  "scripts": {
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "release": "npm publish --access=public"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  }
}
